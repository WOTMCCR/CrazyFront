{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [{
			"path": "pages/Login/Login",
			"style": {
				"navigationBarTitleText": "登录",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/Square/SquareList",
			"style": {
				"navigationBarTitleText": "疯吧",
				"enablePullDownRefresh": true
			}

		},
		{
			"path" : "pages/Square/CreateA",
			"style" : 
			{
				"navigationBarTitleText" : "创建活动",
				"enablePullDownRefresh" : false
			}
		},
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "主页",
				"enablePullDownRefresh": true
			}

		},
		{
			"path": "pages/home/CreateM",
			"style": {
				"navigationBarTitleText": "创建动态",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/My/My",
			"style": {
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": true
			}

		},
		{
			"path": "pages/test/test1",
			"style": {
				"navigationBarTitleText": "测试",
				"enablePullDownRefresh": false
			}
		}
		
	],
	"subPackages": [{
		"root": "subpkg",
		"pages": [{
				"path": "MomentDetail/MomentDetail",
				"style": {
					"navigationBarTitleText": "动态详情",
					"enablePullDownRefresh": true
				}
			},
			{
				"path": "ActivityDetail/ActivityDetail",
				"style": {
					"navigationBarTitleText": "活动详情",
					"enablePullDownRefresh": true
				}
			}
		    ,{
                    "path" : "testdetail/testdetail",
                    "style" :                                                                                    
                {
                    "navigationBarTitleText": "测试详情",
                    "enablePullDownRefresh": false
                }
                
                }
            ]
	}],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "CrazyBar",
		"navigationBarBackgroundColor": "#2e76e9",
		"backgroundColor": "#000000"
	},
	"tabBar": {
		"list": [{
				"pagePath": "pages/test/test1",
				"text": "测试",
				"iconPath": "static/enroll.png",
				"selectedIconPath": "static/enroll_cur.png"
			},
			{
				"pagePath": "pages/Login/Login",
				"text": "登陆",
				"iconPath": "static/checkin.png",
				"selectedIconPath": "static/checkin_cur.png"
			},
			{
				"pagePath": "pages/Square/SquareList",
				"text": "疯吧",
				"iconPath": "static/enroll.png",
				"selectedIconPath": "static/enroll_cur.png"
			},
			{
				"pagePath": "pages/home/home",
				"text": "首页",
				"iconPath": "static/home.png",
				"selectedIconPath": "static/home_cur.png"
			},
			{
				"pagePath": "pages/My/My",
				"text": "我的",
				"iconPath": "static/my.png",
				"selectedIconPath": "static/my_cur.png"
			}
		]
	}
